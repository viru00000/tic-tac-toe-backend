<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tic-Tac-Toe</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div id="auth">
    <h1>Welcome to Tic-Tac-Toe Game</h1>
    <h2>Register / Login</h2>

    <!-- Register Form -->
    <div id="register">
      <h2>Register</h2>
      <form id="registerForm">
        <input type="text" id="registerUsername" placeholder="Username" required />
        <input type="password" id="registerPassword" placeholder="Password" required />
        <button type="submit">Register</button>
      </form>
      <button id="showLogin">Already a user? Login</button>
    </div>

    <!-- Login Form -->
    <div id="login" style="display: none;">
      <h2>Login</h2>
      <form id="loginForm">
        <input type="text" id="loginUsername" placeholder="Username" required />
        <input type="password" id="loginPassword" placeholder="Password" required />
        <button type="submit">Login</button>
      </form>
    </div>

    <!-- Game Controls -->
    <div id="gameControls" style="display: none;">
      <input type="text" id="inviteUsername" placeholder="Opponent's Username" required />
      <button id="startGame">Start Game</button>
    </div>

    <!-- Game Board (only shows up after the game starts) -->
    <div id="gameBoard" style="display: none;">
      <div class="row">
        <div class="cell" id="cell-0"></div>
        <div class="cell" id="cell-1"></div>
        <div class="cell" id="cell-2"></div>
      </div>
      <div class="row">
        <div class="cell" id="cell-3"></div>
        <div class="cell" id="cell-4"></div>
        <div class="cell" id="cell-5"></div>
      </div>
      <div class="row">
        <div class="cell" id="cell-6"></div>
        <div class="cell" id="cell-7"></div>
        <div class="cell" id="cell-8"></div>
      </div>
      <!-- History and Restart Game buttons on the game board page -->
      <button id="restartGame" style="display: none;">Restart Game</button>
      <button id="fetchHistory" style="display: none;">Fetch Game History</button>
    </div>

    <!-- Game History -->
    <div id="gameHistory" style="display: none;">
      <h2>Game History</h2>
      <ul id="historyList"></ul>
    </div>
  </div>

  <script src="/app.js"></script> <!-- Link to app.js -->
</body>
</html>
